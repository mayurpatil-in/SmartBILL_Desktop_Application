<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--Main Border-->
    <Style x:Key="WinBorderStyle" TargetType="Border">
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                    <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.5"/>
                    <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="BorderBackgroundStyle" TargetType="Border">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#6ad8fd" Offset="-0.2"></GradientStop>
                    <GradientStop Color="#7985ff" Offset="0.5"></GradientStop>
                    <GradientStop Color="#d489ff" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Card Border-->
    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="#362f54"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="CornerRadius" Value="25"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        
    </Style>
    <Style x:Key="CardBorder" TargetType="Border">
        <Setter Property="Height" Value="150"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="CornerRadius" Value="25"/>
        <Setter Property="VerticalAlignment" Value="Top"/>

    </Style>

</ResourceDictionary>